<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0DFDF"
        tools:context=".credential.WelcomeActivity"
        >

    <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/wave_background"
            android:alpha="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            />

    <TextView
            android:id="@+id/appNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urban Monitor"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/logo"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp"
            android:fontFamily="@font/poppins_semibold_italic"
            />

    <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to your account"
            android:textSize="24dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/appNameText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp"
            android:fontFamily="@font/inter_extrabold"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/loginSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back! Please enter your details."
            android:textSize="14dp"
            android:textColor="#777777"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/loginTitle"
            app:layout_constraintStart_toStartOf="@id/loginTitle"
            android:fontFamily="@font/inter"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:text="Login"
            android:textAllCaps="false"
            android:padding="12dp"
            android:textSize="16dp"
            app:cornerRadius="8dp"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            app:layout_constraintTop_toBottomOf="@id/loginSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/googleLoginButton"
            app:layout_constraintVertical_bias="0.9"
            android:layout_marginTop="40dp"
            app:backgroundTint="#4874E0"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/googleLoginButton"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:text="Continue with Google"
            android:textAllCaps="false"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16dp"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconTint="@null"
            app:iconPadding="8dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="22dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:layout_constraintBottom_toTopOf="@+id/appleLoginButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            android:layout_marginTop="10dp"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/appleLoginButton"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:text="Continue with Apple"
            android:textAllCaps="false"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16dp"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_apple"
            app:iconGravity="textStart"
            app:iconTint="@null"
            app:iconPadding="8dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/googleLoginButton"
            />

    <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Sign up"
            android:textColor="#2962FF"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="140dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>