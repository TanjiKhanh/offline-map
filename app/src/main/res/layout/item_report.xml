<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

        <!-- Icon Container -->
        <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/report_circle">

            <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_accident_report" />
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            <!-- Header Row -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Traffic Accident"
                        android:textColor="#1F2937"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5m ago"
                        android:textColor="#6B7280"
                        android:textSize="10dp" />
            </LinearLayout>

            <TextView
                    android:id="@+id/textLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Main St and 5th Ave"
                    android:textColor="#6B7280"
                    android:textSize="10dp" />

            <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text='Reported by John Doe: "Two-car collision blocking the right lane"'
                    android:textColor="#4B5563"
                    android:textSize="12dp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">

                <Button
                        android:id="@+id/btnValidate"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:text="VALIDATE"
                        android:textColor="@android:color/white"
                        android:textSize="12dp"
                        android:backgroundTint="#5C5CFF"
                        android:textStyle="bold" />

                <Button
                        android:id="@+id/btnReject"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:text="REJECT"
                        android:textColor="#6B7280"
                        android:textSize="12dp"
                        android:backgroundTint="@android:color/white"
                        android:textStyle="bold" />

                <Button
                        android:id="@+id/btnView"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="VIEW"
                        android:textColor="#6B7280"
                        android:textSize="12dp"
                        android:backgroundTint="@android:color/white"
                        android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>