<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <ScrollView
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bottom_nav"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
        android:id="@+id/userbody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SafetyFirst"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#5A29E4" />

            <!-- Notification + Avatar container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="0dp"
                android:spacing="8dp">

                <!-- Notification bell with red dot -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/notification_bell"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notification" />

                    <!-- Red dot -->
                    <ImageView
                        android:id="@+id/red_dot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:translationX="-2dp"
                        android:translationY="2dp"
                        android:background="@drawable/red_dot_background" />
                </FrameLayout>

                <!-- User avatar -->
                <TextView
                    android:id="@+id/avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/risk_circle"
                    android:text="JD"
                    android:textColor="#4F46E5"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            android:paddingLeft="16dp"

            android:paddingRight="16dp"
            >
            <!-- Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                >

                <!-- Profile Icon -->
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/profile_circle"
                    android:text="JD"
                    android:textColor="#4F46E5"

                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <!-- Name and Stats -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:fontFamily="@font/inter"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safety Contributor"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp" />


                </LinearLayout>


            </LinearLayout>


            <!-- Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <!-- Reports -->
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:text="24"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:textAlignment="center"
                        android:text="Reports"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Points -->
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:text="1,240"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:textAlignment="center"
                        android:text="Points"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Helped -->
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:text="8"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:text="Helped"
                        android:textAlignment="center"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




        <!-- Action Buttons (Report, Traffic, Risk Areas, Feedback) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:gravity="center"
            android:weightSum="4">

            <!-- Report -->
            <LinearLayout
                android:id="@+id/report_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/report_circle"
                    android:padding="14dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:src="@drawable/ic_report"
                        android:contentDescription="Report" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Traffic -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/traffic_circle"
                    android:padding="14dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:src="@drawable/ic_traffic"
                        android:contentDescription="Traffic" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traffic"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Risk Areas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/risk_circle"
                    android:padding="14dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:src="@drawable/ic_risk"
                        android:contentDescription="Risk Areas" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Risk Areas"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Feedback -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/feedback_circle"
                    android:padding="14dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:src="@drawable/ic_feedback"
                        android:contentDescription="Feedback" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>



        <!-- Safety Center Card -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safety Center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High-Risk Areas Near You"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="12dp" />

            <!-- Map Placeholder -->
            <FrameLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/map_frame_background"
                android:clipToOutline="true"
                android:elevation="2dp">

                <org.mapsforge.map.android.view.MapView
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                />

                <!-- Top-right button -->
                <ImageButton
                    android:id="@+id/button_top_right"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:background="@drawable/map_button_background"
                    android:src="@drawable/ic_target"
                    android:contentDescription="Locate"
                    android:tint="#5A29E4" />

                <!-- Bottom-left button -->
                <ImageButton
                    android:id="@+id/button_bottom_left"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="8dp"
                    android:background="@drawable/map_button_background"
                    android:src="@drawable/ic_zoom"
                    android:contentDescription="Zoom"
                    android:tint="#5A29E4" />
            </FrameLayout>

            <!-- Risk Legend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="4dp">

                <!-- High risk -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="4dp"
                        android:foreground="@drawable/dot_red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High risk"
                        android:textSize="12sp"
                        android:textColor="#374151" />
                </LinearLayout>

                <!-- Medium risk -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="4dp"
                        android:foreground="@drawable/dot_yellow" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium risk"
                        android:textSize="12sp"
                        android:textColor="#374151" />
                </LinearLayout>

                <!-- Low risk -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="4dp"
                        android:foreground="@drawable/dot_green" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low risk"
                        android:textSize="12sp"
                        android:textColor="#374151" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    <!-- Recent Reports -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F9FAFB">

            <!-- Recent Report -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Reports"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#FFF5F5"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#FFF5F5">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_accident_report"
                    android:contentDescription="Traffic Accident"
                    android:tint="#E53935" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Traffic Accident"
                        android:textStyle="bold"
                        android:textColor="#E53935"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main St &amp; 5th Ave"
                        android:textColor="#666"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5m ago"
                    android:textColor="#999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#FFF8E1"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heavy_traffic_report"
                    android:contentDescription="Heavy Traffic"
                    android:tint="#F9A825" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heavy Traffic"
                        android:textStyle="bold"
                        android:textColor="#F9A825"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highway 101 North"
                        android:textColor="#666"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15m ago"
                    android:textColor="#999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#E0F2F1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_minor_hazard_report"
                    android:contentDescription="Minor Hazard"
                    android:tint="#26A69A" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minor Hazard"
                        android:textStyle="bold"
                        android:textColor="#26A69A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riverside Park"
                        android:textColor="#666"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1h ago"
                    android:textColor="#999"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>